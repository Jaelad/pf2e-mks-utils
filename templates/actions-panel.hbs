<form id="sequencer-effects-form" class="dialog-content" onsubmit="event.preventDefault();" autocomplete="off">

	<nav class="sheet-tabs tabs mb-1" data-group="actions-panel">
		<a class="item active mks-active-tab mks-mr10" data-tab="encounter"><i class="fas fa-fist-raised"></i> {{ localize "PF2E.TabActionsEncounterLabel" }}</a>
		<a class="item mks-mr10" data-tab="exploration"><i class="fas fa-campground"></i> {{ localize "PF2E.TabActionsExplorationLabel" }}</a>
		<a class="item" data-tab="downtime"><i class="fas fa-bath"></i> {{ localize "PF2E.TabActionsDowntimeLabel" }}</a>
	</nav>

	<hr>

	<section id="actions-panel-tabs" class="content">
		<div class="tab panel-container" data-tab="encounter" data-group="actions-panel">
			<div class="form-group">
				<label><span>{{localize "PF2E.MKS.ActionsPanel.ShowApplicable"}}</span></label>
				<div class="form-fields">
					<input type="checkbox" class="mks-checkbox" name="{{localize "PF2E.MKS.ActionsPanel.ShowApplicable"}}" id="showApplicable" {{#if showApplicable}}checked{{/if}} />
				</div>
			</div>
			<div class="form-group">
				<label><span>{{localize "PF2E.MKS.ActionsPanel.InCombatTurn"}}</span></label>
				<div class="form-fields">
					<input type="checkbox" class="mks-checkbox" name="{{localize "PF2E.MKS.ActionsPanel.InCombatTurn"}}" id="inCombatTurn" {{#if inCombatTurn}}checked{{/if}} />
				</div>
			</div>
			<ol class="mks-list">
				{{#each actions as |tag|}}
					<li class="mks-list__item">
						<header class="flexrow">
							<label class="mks-list__collapse">{{tag.label}}
								<i class="mks-list__collapse-icon fa fa-angle-{{#if tag.expanded}}down{{else}}up{{/if}}"></i>
							</label>
						</header>
						<ol	class="mks-list__collapsible{{#unless tag.expanded}} mks-list__collapsible--collapsed{{/unless}} mks-list" id="{{tag.tag}}">
							{{#each tag.methods as |method|}}
								<li class="mks-list__item mks-noborder">
									<header class="flexrow">
										{{#if method.icon}}
											<img class="mks-list__icon" width="24" height="24" src="{{method.icon}}">
										{{/if}}
										<a data-action="{{method.action}}" data-method="{{method.method}}" class="mks-list__link">{{method.label}} {{#if (ne method.action 'rudimentary')}}<i class="fas fa-caret-right"></i>{{/if}}</a>
									</header>
								</li>
							{{/each}}
						</ol>
					</li>
				{{/each}}
			</ol>
		</div>
		<div class="tab effects-container" data-tab="exploration" data-group="actions-panel">
			Exploration
		</div>
		<div class="tab effects-container" data-tab="downtime" data-group="actions-panel">
			Downtime
		</div>
	</section>

</form>